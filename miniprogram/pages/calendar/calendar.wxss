/* pages/calendar.wxss */
.t-calendar__title {
    display: none !important;
}

.t-calendar__months {
    height: 100% !important;
}

.is-period .t-calendar__dates-item-prefix:not(.t-calendar__dates-item--selected) {
    /* font-size: ; */
    color: #e34d59 !important;
}

.is-love .t-calendar__dates-item-prefix:not(.t-calendar__dates-item--selected) {
    font-size: 22rpx;
    color: #e34d59 !important;
}

.is-light .t-calendar__dates-item-suffix {
    color: #12f530 !important;
}

.is-weight .t-calendar__dates-item-suffix {
    color: #f14d0c !important;
}

.wrap {
    border: 1px solid #dcdcdc;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    padding: 8px 0;
    border-radius: 22px;
    box-shadow: 0px 5px 5px -3px rgba(0, 0, 0, 0.1), 0px 8px 10px 1px rgba(0, 0, 0, 0.06),
        0px 3px 14px 2px rgba(0, 0, 0, 0.05);
    background: rgba(255, 255, 255, 1);
    width: 44px;
    height: 156px;
    box-sizing: border-box;
}

.item {
    width: 100%;
    height: 44px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    font-size: 12px;
    color: rgba(0, 0, 0, 0.9);
    cursor: pointer;
}

.item:not(:last-child) {
    margin-bottom: 4px;
}

.text {
    height: 20px;
    line-height: 20px;
}

.symbol {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px 0 0 16px;
    background: #fff;
    border: 1px solid #dcdcdc;
    border-right: 0;
    box-shadow: 0px 5px 5px -3px #0000001a, 0px 8px 10px 1px #0000000f, 0px 3px 14px 2px #0000000d;
}

.calendar-card {
    margin: 20rpx;
    padding: 20rpx;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    /* TDesign 卡片默认圆角 */
    /* box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.08); TDesign 卡片默认阴影 */
    box-shadow: 0 6px 20px 0 rgba(0, 0, 0, 0.15), 0 4px 12px 0 rgba(0, 0, 0, 0.1);
}

.edit-button {
    display: flex;
    box-sizing: border-box;
    /* 包含 padding，避免宽度溢出 */
    background: rgba(255, 255, 255, 0.95);
    /* 白色背景 + 轻微透明，适配复杂页面 */
    display: flex;
    /* 横向排列 */
    gap: 16rpx;
    /* 按钮之间的间距 */
    z-index: 999;
    /* 确保按钮在最上层，不被其他内容遮挡 */
}

.edit-button t-button {
    flex: 1;
    /* 3 个按钮平分容器宽度 */
    height: 80rpx;
    /* 按钮高度（竖屏手指操作舒适） */
    font-size: 28rpx;
    /* 按钮文字大小 */
    --t-button-border-radius: 16rpx;
    /* 圆角优化（TDesign CSS 变量） */
}

/* 新增：体重记录卡片样式 */
.weight-card {
    margin: 0 24rpx 32rpx;
    /* 左右与日历卡片对齐，底部留足间距 */
    padding: 32rpx;
    background-color: #FFFFFF;
    border-radius: 24rpx;
    /* 与日历卡片一致的阴影，保持风格统一 */
    box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.12), 0 2px 8px 0 rgba(0, 0, 0, 0.08);
    border: 1px solid #F2F3F5;
}

.weight-card__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.weight-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .weight-label {
    font-size: 26rpx;
    color: #86909C; /* TDesign 中性色-400 */
    margin-bottom: 8rpx;
  }
  
  .weight-value {
    display: flex;
    align-items: baseline;
  }
  
  .weight-number {
    font-size: 48rpx;
    font-weight: 700;
    color: #1D2129; /* TDesign 中性色-600 */
    line-height: 1;
  }
  
  .weight-change {
    display: flex;
    align-items: center;
    font-weight: 600;
    font-size: 40rpx;
  }
  
  /* 变化状态样式 */
  .weight-change--down {
    color: #00B42A; /* TDesign 成功色 */
  }
  
  .weight-change--up {
    color: #F53F3F; /* TDesign 危险色 */
  }
  
  .weight-change--same {
    color: #86909C; /* TDesign 中性色-400 */
  }
  
  .change-value {
    margin: 0 8rpx;
  }
  
  .weight-unit {
    font-size: 28rpx;
    color: #4E5969; /* TDesign 中性色-500 */
    margin-left: 4rpx;
  }
  
  /* 分隔线样式 */
  .weight-divider {
    width: 1px;
    height: 60rpx;
    background-color: #F2F3F5; /* TDesign 中性色-100 */
    margin: 0 24rpx;
  }
.dialog-input {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    margin-top: 32rpx;
    border-radius: 8rpx;
    background-color: var(--td-bg-color-page);
    box-sizing: border-box;
}

/* 悬浮按钮容器：固定在屏幕最下方，全屏宽度 */
.floating-btn-container {
    position: fixed;
    /* 固定定位，不跟随页面滚动 */
    bottom: 0;
    /* 距离屏幕底部 0 */
    left: 0;
    /* 距离屏幕左侧 0 */
    width: 100%;
    /* 全屏宽度 */
    padding: 20rpx;
    /* 左右边距，避免按钮贴边 */
    box-sizing: border-box;
    /* 包含 padding，避免宽度溢出 */
    background: rgba(255, 255, 255, 0.95);
    /* 白色背景 + 轻微透明，适配复杂页面 */
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
    /* 顶部阴影，区分页面层级 */
    display: flex;
    /* 横向排列 */
    gap: 16rpx;
    /* 按钮之间的间距 */
    z-index: 999;
    /* 确保按钮在最上层，不被其他内容遮挡 */
}

/* TDesign 按钮适配：占满剩余宽度，均匀分布 */
.floating-btn-container t-button {
    flex: 1;
    /* 3 个按钮平分容器宽度 */
    height: 80rpx;
    /* 按钮高度（竖屏手指操作舒适） */
    font-size: 28rpx;
    /* 按钮文字大小 */
    --t-button-border-radius: 16rpx;
    /* 圆角优化（TDesign CSS 变量） */
}

/* 可选：单独修改某个按钮的样式（如警告按钮） */
.floating-btn-container t-button[type="warning"] {
    --t-button-bg-color: #faad14;
    /* 自定义警告色 */
    --t-button-text-color: #fff;
}